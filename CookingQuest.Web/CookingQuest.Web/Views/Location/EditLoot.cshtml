@model CookingQuest.Web.API_Models.LootModel

@{
    ViewData["Title"] = "Edit";
    var userName = User.Claims.First(c => c.Type == "name").Value;
}

<h1>Update Drop Rate</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditLoot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => Model.LootId)
            @Html.HiddenFor(m => Model.LocationLootId)
            @Html.HiddenFor(m => Model.Name)
            @Html.HiddenFor(m => Model.Description)
            <div class="form-group">
                <label asp-for="DropRate" class="control-label"></label>
                <input asp-for="DropRate" type="number" min="1" max="100" class="form-control" />
                <span asp-validation-for="DropRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
